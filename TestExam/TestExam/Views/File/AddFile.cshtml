@model TestExam.Models.FileViewModel
@{
    ViewData["Title"] = "AddFile";
}

<h2>AddFile</h2>

<h3>Выберите файл для загрузки</h3>
<form asp-action="Files" asp-controller="File" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ShortDescription" class="control-label">Короткое описание</label>
        <input type="text" asp-for="ShortDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Подробное описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UploadedFile" class="control-label">File</label>
        <input type="file" asp-for="UploadedFile" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-default" />
    </div>
</form>